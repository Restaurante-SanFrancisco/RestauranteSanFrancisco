{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        // Mantenemos X-Frame-Options para compatibilidad, aunque CSP lo cubra
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        // Política de Referencia
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        // Política de Permisos
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        // CSP CORREGIDA y ROBUSTA
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; frame-ancestors 'self'; img-src 'self' data: https:; script-src 'self'; style-src 'self'; connect-src 'self' https://*.supabase.co;"
        }
      ]
    }
  ]
}
